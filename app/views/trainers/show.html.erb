<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>
<p>
<% if @trainer == current_trainer %>
  <%= button_to "Create Pokemon", new_path, :class => "button medium", :method => :get %>
<% end %>
</p>
<% @trainer.pokemons.each do |pokemon| %>
	<li><%= pokemon.name %>
	<%= pokemon.level %>
	<%= pokemon.health %>
	<%= button_to "Damage", damage_path(id: pokemon), :class => "button medium", :method => :patch %></li>
<% end %>
